<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>EverQuiz</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
  
  
</head>
<body ng-app="everquizApp">
  <h1>EverQuiz</h1>
  <ui-view></ui-view>

  <script type="text/ng-template" id="/users.html">
    <div>
      {{test}}
    </div>
    <div ng-repeat="user in users">
      <i class="fa fa-trash-o" ng-click='removeUser(user)'></i>
      <i class="fa fa-wrench" ng-click='editUser(user)'></i>
      <a href="#/dashboard/{{user._id}}">
        {{user.name}}
      </a>
      - {{user.email}} 
      <small>createAt</small> {{user.createAt}}
      <span>
        <a href="#/users/{{user._id}}/notes/">Notes</a>
      </span>
    </div>
    <form ng-submit="addUser()">
      <input type="text" placeholder="Name" ng-model="name"></input>
      <br>
      <input type="email" placeholder="Email" ng-model="email"></input>
      <br>
      <input type="password" placeholder="Password" ng-model="password"></input>
      <br>
      <input type="password" placeholder="Repeat password" ng-model="passwordRepeat"></input>
      <br>
      <button type="submit">Add User</button>
    </form>
  </script>

  <script type="text/ng-template" id="/dashboard.html">
    <h2>
      {{user.name}} - {{user.email}}
    </h2>
    <h3>
      Notes:
    </h3>
    <div ng-repeat="note in notes | orderBy:'-createAt'">
      <i class="fa fa-trash-o" ng-click='removeNote(note, user)'></i>
      <i class="fa fa-wrench" ng-click='editNote(note, user)'></i>
      {{note.title}} - createAt {{note.createAt}}
      <span style="font-size:20px; margin-left:10px;">
        {{note.text}}
      </span>
    </div>

    <!-- post template -->

    <form ng-submit="addNote()"
      style="margin-top:30px;">
      <h3>Add new note</h3>

      <input type="text"
      placeholder="Title"
      ng-model="title"></input><br/>
      <textarea ng-model="text"></textarea><br/>
      <button type="submit">New note</button>
    </form>

  </script>
  
  <!-- External dependencies -->
  <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.15/angular-ui-router.js"></script>

  <!-- Own JS files -->
  <script src="javascripts/angularApp.js"></script>
  <script src="javascripts/services/postService.js"></script>
  <script src="javascripts/services/userService.js"></script>
  <script src="javascripts/services/noteService.js"></script>
  <script src="javascripts/controllers/mainController.js"></script>
  <script src="javascripts/controllers/postController.js"></script>
  <script src="javascripts/controllers/userController.js"></script>
  <script src="javascripts/config/routes.js"></script>
</body>
</html>